{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node16",
    "importsNotUsedAsValues": "remove",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
